translate zh_hant a2_rin_target_audience_9884910a:

    # emm "What is he, sixteen?"
    emm "他多大了，十六歲？"

# game/script-a2-rin.rpy:2800
translate zh_hant a2_rin_target_audience_34d1d59d:

    # hi "Hmm?"
    hi "嗯？"

# game/script-a2-rin.rpy:2805
translate zh_hant a2_rin_target_audience_bdc861ba:

    # emm "Oh, nothing."
    emm "噢，沒什麼。"

# game/script-a2-rin.rpy:2810
translate zh_hant a2_rin_target_audience_8a9af1ea:

    # emm "I've got to go meet up with a friend of mine."
    emm "我要去見一個朋友。"

# game/script-a2-rin.rpy:2815
translate zh_hant a2_rin_target_audience_1f7c4f4c:

    # emm "Will you tell Emi I'm very proud of her and that I'll call her later tonight?"
    emm "你能轉告笑美她讓我很驕傲嗎？我今晚再給她打電話。"

# game/script-a2-rin.rpy:2820
translate zh_hant a2_rin_target_audience_2f6a93ba:

    # hi "Of course."
    hi "沒問題。"

# game/script-a2-rin.rpy:2834
translate zh_hant a2_rin_target_audience_cd465943:

